
<div class="objectdetail">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @review.restaurant.name %>
  </h1>

  <p> by 
    <%= @review.user.email %>
  </p>

  <p>
    <b>Rating:</b> <%= @review.rating %>(out of 5 stars)
  </p>

  <p>
    <b>Comment:</b>
    <%= @review.comment %>
  </p>
   <a href="<%= url_for(:action => 'index', :controller => 'reviews', :restaurant_id => @restaurant.id) %>"> View all reviews for <%= @review.restaurant.name %></a>
   <br />
   <a href="<%= url_for(:action => 'index', :controller => 'restaurants') %>"> Back to Restaurant Listing </a>

</div>
