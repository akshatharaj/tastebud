  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.text_field :rating :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area(:comment, :size => '50x10') %>
  </div>
