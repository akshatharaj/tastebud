<h1>Restaurant Listing</h1>

<table>
    <tr>
        <th>Name     </th>
        <th>Phone    </th>
        <th>Address </th>
        <th>City     </th>
        <th>State    </th>
        <th>Zip      </th>
        <th>Comments </th>
    </tr>

<% @restaurants.each do |restaurant| %>
    <tr>
        <td><%=h restaurant.name    %></td>
        <td><%=h restaurant.phone  %></td>
        <td><%=h restaurant.address1 %></td>
        <td><%=h restaurant.city    %></td>
        <td><%=h restaurant.state  %></td>
        <td><%=h restaurant.zip %></td>
        <td><%=h restaurant.comments    %></td>
        <td><%= link_to'Show', restaurant                   %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant)  %></td> 
        <td><%= link_to 'Destroy', restaurant,
                 :confirm => 'Are you sure?',
                 :method  => :delete                  %></td>
    </tr>
<% end %>
</table>

